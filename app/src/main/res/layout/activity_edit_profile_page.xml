<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfilePage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:titleTextColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/toolbarTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/lexend_medium"
                            android:text="Task Hub"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </com.google.android.material.appbar.MaterialToolbar>



                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.AppBarLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Aqui-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profileCard"
                        android:layout_width="match_parent"
                        android:layout_height="740dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/main_card_shape"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">


                            <TextView
                                android:id="@+id/profileLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="30dp"
                                android:fontFamily="@font/lexend_medium"
                                android:gravity="center"
                                android:paddingHorizontal="12dp"
                                android:paddingTop="6dp"
                                android:text="Editar Meu Perfil"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:paddingHorizontal="20dp"
                                android:layout_marginBottom="12dp"
                                android:src="@drawable/imgicon" />

                            <TextView
                                android:id="@+id/txtName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:gravity="left"
                                android:paddingHorizontal="12dp"
                                android:paddingTop="6dp"
                                android:text="Nome:"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edtName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:paddingHorizontal="12dp"
                                android:paddingTop="6dp"
                                android:layout_marginBottom="10dp"
                                android:ems="10"
                                android:hint="Usuario da Silva"
                                android:inputType="text" />

                            <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:gravity="left"
                                android:paddingHorizontal="12dp"
                                android:paddingTop="6dp"
                                android:text="Email:"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:paddingHorizontal="12dp"
                                android:paddingTop="6dp"
                                android:layout_marginBottom="10dp"
                                android:ems="10"
                                android:hint="email@email.com"
                                android:inputType="textEmailAddress" />
                            <TextView
                                android:id="@+id/txtTelephone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:gravity="left"
                                android:paddingHorizontal="12dp"
                                android:paddingTop="6dp"
                                android:text="Celular:"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edtTelephone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:paddingHorizontal="12dp"
                                android:paddingTop="6dp"
                                android:layout_marginBottom="10dp"
                                android:ems="10"
                                android:hint="5511912345678"
                                android:inputType="textEmailAddress" />

                            <TextView
                                android:id="@+id/txtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:gravity="left"
                                android:paddingHorizontal="12dp"
                                android:paddingTop="6dp"
                                android:text="Senha:"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/edtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:paddingHorizontal="12dp"
                                android:paddingTop="6dp"
                                android:layout_marginBottom="10dp"
                                android:ems="10"
                                android:hint="********"
                                android:inputType="text" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnSaveChanges"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_margin="10dp"
                                android:text="SALVAR ALTERAÇÕES"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:fontFamily="@font/lexend_medium"
                                android:background="@drawable/button_selector"/>


                            <TextView
                                android:id="@+id/errorMessage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/lexend_medium"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/red"
                                android:textSize="18sp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </ScrollView>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>